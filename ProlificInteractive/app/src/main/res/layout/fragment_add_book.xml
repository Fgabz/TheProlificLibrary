<com.prolificinteractive.utils.MyCustomLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prolificinteractive.fragments.AddBookFragment">


    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Title"
            app:baseColor="@color/colorPrimary"
            app:floatingLabel="highlight"
            app:primaryColor="@color/md_light_green_400"
            app:singleLineEllipsis="true"
            android:maxLines="1"
            android:singleLine="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            app:baseColor="@color/colorPrimary"
            app:floatingLabel="highlight"
            app:primaryColor="@color/md_light_green_400"
            app:singleLineEllipsis="true"
            android:maxLines="1"
            android:singleLine="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Publisher"
            app:baseColor="@color/colorPrimary"
            app:floatingLabel="highlight"
            app:primaryColor="@color/md_light_green_400"
            app:singleLineEllipsis="true"
            android:maxLines="1"
            android:singleLine="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Publisher"
            app:baseColor="@color/colorPrimary"
            app:floatingLabel="highlight"
            app:primaryColor="@color/md_light_green_400"
            app:singleLineEllipsis="true"
            android:maxLines="1"
            android:singleLine="true"/>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/add_book"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>


    </LinearLayout>


</com.prolificinteractive.utils.MyCustomLayout>